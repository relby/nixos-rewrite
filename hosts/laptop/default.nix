    ./hardware-configuration.nix

    ../../modules/nixos/core/desktop.nix
    ../../modules/nixos/hyprland.nix

    # ../../modules/nixos/nvidia.nix
  ];

  users = {
    mutableUsers = false;
    users = {
      ${username} = {
        isNormalUser = true;
        # The hashed password with salt is generated by run `mkpasswd`.
